{
    "compilerOptions": {
        "moduleResolution": "NodeNext",
        "baseUrl": ".",
        "target": "ES2022",
        "noImplicitAny": false,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "paths": {
            "@pipeline/types": ["libraries/common/types"],
            "@pipeline/utilities": ["libraries/runner/utilities"],
            "@pipeline/core": ["libraries/runner/core"]
        }
    }
}