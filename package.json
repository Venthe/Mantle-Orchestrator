{
  "name": "root",
  "private": true,
  "scripts": {
    "nx": "nx",
    "lerna": "lerna",
    "graph": "nx -- graph",
    "build:all": "lerna -- run build",
    "build:runner": "lerna -- run build --scope=actions-runner",
    "build:runner-container": "bash ./manager.sh buildContainer",
    "build:actions": "lerna -- run build --scope=@actions/*",
    "build:action": "f() { npm run --silent lerna -- run build --scope=@actions/$1; }; f",
    "test:all": "lerna -- run test",
    "test:runner": "lerna -- run test --scope=actions-runner",
    "test:runner:e2e": "lerna -- run test --scope=actions-runner-e2e",
    "watch:all": "lerna watch -- lerna run build --scope=\\$LERNA_PACKAGE_NAME --include-dependents",
    "watch:runner": "lerna watch --scope=\"actions-runner\" --include-dependencies -- lerna run build --scope=\\$LERNA_PACKAGE_NAME",
    "watch:action": "f() { npm run --silent lerna -- watch --scope=\"@actions/$1\" --include-dependencies -- lerna run build --scope=\\$LERNA_PACKAGE_NAME; }; f"
  },
  "workspaces": [
    "actions/*",
    "libraries/*",
    "runner/*"
  ],
  "devDependencies": {
    "lerna": "^6.6.1"
  }
}